{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@models/*": ["./models/*"],
      "@mocks/*": ["./mocks/*"],
      "@database/*": ["./database/*"],
      "@services/*": ["./services/*"],
      "@routes/*": ["./routes/*"],
      "@app-types/*": ["./types/*"],
      "@shared/models": ["./models/index"],
      "@shared/models/enums": ["./models/enums/index"],
      "@shared/models/interfaces": ["./models/interfaces/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
